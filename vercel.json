{
    "$schema": "https://openapi.vercel.sh/vercel.json",
    "version": 2,
    "regions": ["hnd1"],
    "functions": {
      "api/**/*.py": {
        "maxDuration": 30,
        "memory": 1024
      }
    },
    "routes": [
      { "handle": "filesystem" },
      { "src": "/static/(.*)", "dest": "/static/$1", "headers": { "Cache-Control": "public, max-age=86400" } },
      { "src": "/uploads/(.*)", "dest": "/api/index.py" },
      { "src": "/avatar/(.*)", "dest": "/api/index.py" },
      { "src": "/healthz", "dest": "/api/index.py" },
      { "src": "/(.*)", "dest": "/api/index.py" }
    ],
    "env": { "PYTHONPATH": "." }
  }
  