{
  "version": 2,
  "builds": [
    {
      "src": "vercel_app.py",
      "use": "@vercel/python",
      "config": {
        "maxDuration": 30
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/(.*)",
      "dest": "vercel_app.py"
    }
  ],
  "env": {
    "PYTHONPATH": "."
  }
  {
    "functions": {
      "api/**.js": { "runtime": "nodejs20.x", "regions": ["hnd1"] },
      "app/**/route.js": { "runtime": "nodejs20.x", "regions": ["hnd1"] }
    }
  } 
}
