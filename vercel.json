{
    "$schema": "https://openapi.vercel.sh/vercel.json",
    "version": 2,
    "regions": ["hnd1"],
    "functions": {
      "api/**/*.py": {
        "maxDuration": 30,
        "memory": 1024
      }
    },
    "routes": [
      { "handle": "filesystem" },
      { "src": "/static/(.*)", "dest": "/static/$1", "headers": { "Cache-Control": "public, max-age=86400" } },
      { "src": "/uploads/(.*)", "dest": "/api/index.py", "headers": { "Cache-Control": "no-store, no-cache, must-revalidate, max-age=0, private", "Pragma": "no-cache", "Expires": "0", "Last-Modified": "Thu, 01 Jan 1970 00:00:00 GMT", "If-Modified-Since": "Thu, 01 Jan 1970 00:00:00 GMT", "If-None-Match": "*", "X-Accel-Expires": "0", "X-Cache": "no-cache", "X-Cache-Control": "no-cache" } },
      { "src": "/avatar/(.*)", "dest": "/api/index.py", "headers": { "Cache-Control": "no-store, no-cache, must-revalidate, max-age=0, private", "Pragma": "no-cache", "Expires": "0", "Last-Modified": "Thu, 01 Jan 1970 00:00:00 GMT", "If-Modified-Since": "Thu, 01 Jan 1970 00:00:00 GMT", "If-None-Match": "*", "X-Accel-Expires": "0", "X-Cache": "no-cache", "X-Cache-Control": "no-cache" } },
      { "src": "/default-avatar", "dest": "/api/index.py", "headers": { "Cache-Control": "no-store, no-cache, must-revalidate, max-age=0, private", "Pragma": "no-cache", "Expires": "0", "Last-Modified": "Thu, 01 Jan 1970 00:00:00 GMT", "If-Modified-Since": "Thu, 01 Jan 1970 00:00:00 GMT", "If-None-Match": "*", "X-Accel-Expires": "0", "X-Cache": "no-cache", "X-Cache-Control": "no-cache" } },
      { "src": "/healthz", "dest": "/api/index.py" },
      { "src": "/(.*)", "dest": "/api/index.py" }
    ],
    "env": { "PYTHONPATH": "." }
  }
  