{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "regions": ["hnd1"],

  "functions": {
    "vercel_app.py": {
      "runtime": "python3.11",
      "maxDuration": 30,
      "memory": 1024
    }
  },

  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1",
      "headers": { "Cache-Control": "public, max-age=31536000, immutable" }
    },
    { "src": "/healthz", "dest": "/vercel_app.py" },
    { "src": "/(.*)", "dest": "/vercel_app.py" }
  ],

  "env": { "PYTHONPATH": "." }
}
